## install all updates in CLI

    apt-get update
    apt-get upgrade

## which provides

    pet@cow:~$ dpkg -S /bin/ls
    coreutils: /bin/ls
    #this is like rpm "which provides"

## search package

    aptitude search tig
    
  504  man dpkg
  505  dpkg --get-selections |grep lynx
  506  dpkg -L lynx-cur
  507  vim /etc/lynx-cur/lynx.cfg
  508  vim /etc/lynx-cur/lynx.lss
  509  sudo vim /etc/lynx-cur/lynx.lss
  510  lynx www.google.com
  511  history
  512  dpkg -L lynx
  513  dpkg -L lynx-cur
  514  vim /etc/lynx-cur/lynx.lss

## dry-run

 sudo dpkg -i --dry-run php5-ffmpeg_0.6.0-1build2_amd64.deb

